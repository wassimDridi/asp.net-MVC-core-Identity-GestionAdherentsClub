@model IEnumerable<GestionAdherentsClub.Models.ClubEvent>

@{
    ViewData["Title"] = "Index";
}

<h1>Index event</h1>

<br />
<br />
<br />

<section class="p-3">

    <div class="row">
        <div class="col-12">
            <a asp-action="Create">
                <button class="btn btn-primary newUser" data-bs-toggle="modal" data-bs-target="#userForm">New Event <i class="bi bi-calendar-plus"></i></button>
            </a>
        </div>
    </div>
    <br /><br />

    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-hover mt-3 text-center table-bordered">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Picture</th>
                        <th>Event Name</th>
                        <th>Event Date</th>
                        <th>Club</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ClubEventId</td>
                            <td><img src="~/images/@item.img" alt="" width="50" height="50"></td>
                            <td>@item.EventName</td>
                            <td>@item.EventDate.ToShortDateString()</td>
                            <td>@item.Club?.ClubName</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.ClubEventId">
                                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#readData"><i class="bi bi-eye"></i></button>
                                </a> |
                                <a asp-action="Edit" asp-route-id="@item.ClubEventId">
                                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#userForm"><i class="bi bi-pencil-square"></i></button>
                                </a> |
                                <a asp-action="Delete" asp-route-id="@item.ClubEventId">
                                    <button class="btn btn-danger"><i class="bi bi-trash"></i></button>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</section>
