@model IEnumerable<GestionAdherentsClub.Models.Club>

@{
    ViewData["Title"] = "Index";
}



<br /><br /><br />

<section class="p-3">

    <div class="row">
        <div class="col-12">
            <a asp-action="Create">
                <button class="btn btn-primary newUser" data-bs-toggle="modal" data-bs-target="#userForm">Create New <i class="bi bi-people"></i></button>
            </a>

        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-hover mt-3 text-center table-bordered">

                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Picture</th>
                        <th>Club Name</th>
                        <th> Nom Responsable</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody id="data">
                    @foreach (var item in Model)
                    {
          

                        <tr class="employeeDetails">
                            <td> @Html.DisplayFor(modelItem => item.ClubID) </td>
                            <td><img src="~/images/@item.img" alt="" width="50" height="50"></td>
                            <td>@Html.DisplayFor(modelItem => item.ClubName) </td>
                            <td> @Html.DisplayFor(modelItem => item.ClubNomResponsable) </td>

                            <td>
                                

                                <a asp-action="Details" asp-route-id="@item.ClubID"><button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#readData"><i class="bi bi-eye"></i></button></a> |
                                <a asp-action="Edit" asp-route-id="@item.ClubID">
                                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#userForm"><i class="bi bi-pencil-square"></i></button>
                                </a> |

                                <a asp-action="Delete" asp-route-id="@item.ClubID"><button class="btn btn-danger"><i class="bi bi-trash"></i></button></a>

                            </td>
                        </tr>
                    }





                   

                </tbody>

            </table>
        </div>
    </div>

</section>



