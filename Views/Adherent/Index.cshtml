@model IEnumerable<GestionAdherentsClub.Models.Adherent>

@{
    ViewData["Title"] = "Index";
}

<br /><br /><br />







<section class="p-3">

    <div class="row">
        <div class="col-12">
            <a asp-action="Create">
                <button class="btn btn-primary newUser" data-bs-toggle="modal" data-bs-target="#userForm">New Adherent <i class="bi bi-people"></i></button>
            </a>

        </div>
    </div>
    <br /><br />

    <form class="form-inline my-2 my-lg-0" asp-action="Search" asp-controller="Adherent">
        <p>
            <input size="30" placeholder="tapez un Nom" type="search" name="name" />
            <select asp-items="ViewBag.ClubID" name="clubid" size=1.5 style="width:300px ; height:30px"></select>
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Recherche</button>
        </p>
    </form>

    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-hover mt-3 text-center table-bordered">

                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Picture</th>
                        <th>Adherent Name</th>
                        <th>Adresse</th>
                        <th>Adherent Date Naissance</th>
                        <th>Club</th>
            
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody id="data">
                    @foreach (var item in Model)
                    {
           


                        <tr class="employeeDetails">
                            <td> @item.AdherentId</td>
                            <td><img src="~/images/@item.img" alt="" width="50" height="50"></td>
                            <td>@item.AdherentName</td>
                            <td>@item.AdherentAdresse</td>
                            <td>@item.AdherentDateNaissance</td>
                            <td>@item.Club.ClubName</td>

                            <td>
                                <a asp-action="Details" asp-route-id="@item.AdherentId">
                                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#readData"><i class="bi bi-eye"></i></button>
                                </a> |
                                <a asp-action="Edit" asp-controller="Adherent" asp-route-id="@item.AdherentId">
                                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#userForm"><i class="bi bi-pencil-square"></i></button>
                                </a> |
                                <a asp-action="Delete" asp-route-id="@item.AdherentId">
                                    <button class="btn btn-danger"><i class="bi bi-trash"></i></button>
                                </a>





                            </td>
                        </tr>
                    }



                 

                </tbody>

            </table>
        </div>
    </div>

</section>